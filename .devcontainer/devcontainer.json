{
  "name": "WordPress Development",
  "dockerComposeFile": "docker-compose.yml",
  "service": "wordpress",
  "workspaceFolder": "/var/www/html",
  
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/git-lfs:1": {}, // Git LFS support
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "upgradePackages": true
    }
  },

  "forwardPorts": [8000, 8080],
  "portsAttributes": {
    "8000": {
      "label": "WordPress",
      "onAutoForward": "notify"
    },
    "8080": {
      "label": "phpMyAdmin",
      "onAutoForward": "ignore"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "johnbillion.vscode-wordpress-hooks",
        "bmewburn.vscode-intelephense-client"
      ]
    }
  },
  "postCreateCommand": "git config --global --add safe.directory /workspaces/${localWorkspaceFolderBasename}", // Fixes VS Code warning about unsafe repository
  "postStartCommand": "/setup.sh"
}